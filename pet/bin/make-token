#!/usr/bin/perl -w -I../../perllib -I../perllib

use strict;
require 5.8.0;
use mySociety::Config;
BEGIN {
mySociety::Config::set_file('../conf/general');
}
use Petitions;

my ($what, $id) = @ARGV;
if ($id) {
    print Petitions::Token::make($what, $id);
} else {
    print join(' ', Petitions::Token::check($what));
}
print "\n";

