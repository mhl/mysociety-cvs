#!/usr/bin/perl -w
use strict;

# Generates CatComm version of CSS file from main PledgeBank CSS file

open(MAINCSS, "../web/pb.css") or die "";
open(CATCOMMCSS, ">../web/microsites/autogen/catcomm.css") or die "";

print CATCOMMCSS "/* AUTOMATICALLY GENERATED by make_catcomm_css, do not edit */\n";
print CATCOMMCSS "\n";

my $selector = "";
while(<MAINCSS>) {
    if (m/^(.*) {/) { $selector = $1 }

    s/pb.css/catcomm.css/;
    s/Top-level style sheet for PledgeBank.com/Custom style sheet for CatComm version of PledgeBank/;

    s/#522994/#31659c/gi;  # link colour
    s/#7b52a5/#004488/gi;  # visited link colour
    s/#21004a/#000000/gi;  # purple lettering/thin-borders 
    s/#9c7bbd/#99CCFF/gi;  # darker purple background (at top of page)
    s/#f6e5ff/#D7EBFF/gi;  # lighter pink plaque background
    s/#c6b5de/#99CCFF/gi;  # darker pink plaque background

    print CATCOMMCSS $_;
}
print CATCOMMCSS <<EOF;
#sponsor {
    text-align: center;
    clear: both;
}
EOF
