#!/usr/bin/perl -w
use strict;

# Generates London version of CSS file from main PledgeBank CSS file

open(MAINCSS, "../web/pb.2.css") or die "";
open(LONDONCSS, ">../web/microsites/autogen/london.css") or die "";

print LONDONCSS "/* AUTOMATICALLY GENERATED by make_london_css, do not edit */\n";
print LONDONCSS "\n";

my $selector = "";
while(<MAINCSS>) {
    if (m/^(.*) {/) { $selector = $1 }

    s/pb.css/london.css/;
    s/Top-level style sheet for PledgeBank.com/Custom style sheet for London version of PledgeBank/;

    s/#522994/#31659c/gi;  # link colour
    s/#7b52a5/#004488/gi;  # visited link colour
    s/#21004a/#000000/gi;  # purple lettering/thin-borders 
    s/#9c7bbd/#ee3438/gi;  # darker purple background (at top of page)
    s/#f6e5ff/#ccccff/gi;  # lighter pink plaque background
    s/#c6b5de/#9999ff/gi;  # darker pink plaque background

    print LONDONCSS $_;
}
print LONDONCSS <<EOF;
#sponsor {
    text-align: center;
    clear: both;
}
EOF
