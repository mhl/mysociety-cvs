#!/usr/local/bin/php -q
<?php

/* daily:
 * To be run daily, just after midnight, to send out failure messages
 * (And probably things like "wow, look how many you over-subscribed" messages)
 *
 * Copyright (c) 2005 UK Citizens Online Democracy. All rights reserved.
 * Email: matthew@mysociety.org. WWW: http://www.mysociety.org/
 *
 * $Id: daily,v 1.9 2005-03-11 18:33:20 francis Exp $
 *
 */

require_once "../phplib/pledge.php";

$short_opts = '';
$long_opts = array('verbose','testrun','today=','help');
require_once 'phpcgi';

$switches = $options[0];
$args = $options[1];
$verbose = 0; 
$testrun = 0;
$today = date('Y-m-d');
foreach ($switches as $switch) {
    if ($switch[0]=='--verbose') $verbose = 1;
    if ($switch[0]=='--testrun') $testrun = 1;
    if ($switch[0]=='--today') $today = $switch[1];
    if ($switch[0]=='--help') {
?>

PledgeBank daily script, run just after midnight
./daily [--testrun] [--verbose] [--today=YYYY-MM-DD]

--verbose    Display more information
--testrun    Dry run, just show what would do
--today=DATE Pretend that the date today is as specified 
(useful for testing things that only happen in the future)

<?
        exit;
    }
}

require_once "../conf/general";
include_once '../phplib/db.php';
include_once '../phplib/fns.php';
include_once '../../phplib/utility.php';

db_connect();

check_for_completed_pledges();
check_for_expired_pledges();

function check_for_completed_pledges() {
    global $verbose, $testrun;

    $q = db_query("SELECT id, title, target, type, name, email FROM pledges WHERE confirmed AND NOT completionnotified FOR UPDATE");
    while ($r = db_fetch_array($q)) {
        $signatures = db_getOne('SELECT COUNT(*) FROM signers WHERE pledge_id = ?', $r['id']);
        if ($signatures >= $r['target']) {
            # Success
            if ($testrun)
                print "Would send success messages for pledge $r[id] ($r[title])\n";
            elseif (!send_success_email($r))
                print "Failure sending success messages, pledge $r[id] ($r[title])\n";
            else {
                db_query('UPDATE pledges SET completionnotified = true WHERE id = ?', $r['id']);
                if ($verbose)
                    print "Success messages sent for pledge $r[id] ($r[title])\n";
            }
        }
    }
    db_commit();
}

function check_for_expired_pledges() {
    global $today, $verbose, $testrun;

    $q = db_query("SELECT id, title, target, type, name, email FROM pledges WHERE confirmed AND date < '$today' AND NOT completionnotified FOR UPDATE");
    while ($r = db_fetch_array($q)) {
        # Failure
        if ($testrun)
            print "Would send failure messages for pledge $r[id] ($r[title])\n";
        elseif (!send_failure_email($r))
            print "Failure sending one or more failure messages to pledgees of pledge $r[id] ($r[title])\n";
        else {
            db_query('UPDATE pledges SET completionnotified = true WHERE id = ?', $r['id']);
            if ($verbose)
                print "Failure messages sent for pledge $r[id] ($r[title])\n";
        }
    }
    db_commit();
}

# ------------------------------------------

function send_failure_email($row) {
    $globalsuccess = 1;

    $pledge_id = $row['id'];
    $action = $row['title'];
    $target = $row['target'];
    $type = $row['type'];
    $name = $row['name'];
    $email = $row['email'];

    $q = db_query('SELECT name, email FROM signers WHERE pledge_id=?', array($pledge_id));
    $actual = db_num_rows($q);

    $subject = 'PledgeBank pledge failure - "' . $action . '"';
    $body = "Dear $name,\n\nWe are sorry to have to tell you that your pledge did not meet its target in the required time.\n\nYou required $target $type, but achieved only $actual.\n\nAh well, better luck next time.";
    $success = pb_send_email($email, $subject, $body);
    if ($success==0) 
        $globalsuccess = 0;

    $body = "Dear NAME,\n\nWe are sorry to have to inform you that the pledge to which you signed up did not meet its target in the required time.\n\nIt required $target $type, but achieved only $actual.\n\nDon't be disheartened!";
    while ($r = db_fetch_array($q)) {
        $name = $r['name'];
        $email = $r['email'];
        $success = pb_send_email($email, $subject, str_replace('NAME', $name, $body));
        if ($success==0) 
            $globalsuccess = 0;
    }
    return $globalsuccess;
}

function send_success_email($pledge) {
    $q = db_query('SELECT * FROM signers WHERE pledge_id=?', array($pledge['id']));
    $actual = db_num_rows($q);

    $globalsuccess = 1;
    $title = $pledge['title'];
    $subject = 'PledgeBank pledge completion - "' . $pledge['title'] . '"';
    $body = "Congratulations!\n\nWe are pleased to tell you that your pledge " . ($actual>$pledge['target']?'exceeded':'met') . " its target in the required time.\n\nWoohoo!.";

    $success = pb_send_email($pledge['email'], $subject, $body);
    if ($success==0) 
        $globalsuccess = 0;

    $body = 'Congratulations! You said "' . pledge_sentence($pledge['id'], true, false) . '", and they have!'."\n\nTo see who else signed up, please follow this link:\n\n".OPTION_BASE_URL."/".$pledge['ref']."\n\nYou should also visit this page to be reminded what the pledge was about.\n\nMany thanks,\n\nPledgeBank";
    $s = db_fetch_array($q);
    while ($s) {
        $success = pb_send_email($s['email'], $subject, $body);
        if ($success==0) 
            $globalsuccess = 0;
        $s = db_fetch_array($q);
    }
    return $globalsuccess;
}


