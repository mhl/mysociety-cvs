require_once '../../phplib/utility.php';

db_query("insert into fooble values (98765432109876)");
$q = db_query("select * from fooble where barble = 98765432109876");

while ($row = db_fetch_array($q)) {
    print_r($row);
    print gettype($row[0]) . "\n";
}

