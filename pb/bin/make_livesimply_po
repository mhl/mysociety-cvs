#!/usr/bin/perl -w
use strict;

# Generates Live Simply Promise version of .po file, which is a translation
# into a language the same as English, only "pledge" becomes "promise".

use POSIX;
use File::Copy;

chdir("../../../mysociety/pb/bin") or die "Run from inside mysociety/pb/bin";
chdir("../../locale") or die "No locale directory";
mkdir("en_GB.UTF-8");
mkdir("en_GB.UTF-8/LC_MESSAGES");

File::Copy::syscopy("PledgeBank.po", "PledgeBankLiveSimply.po") or die "couldn't copy to PledgeBankLiveSimply.po: $!";
open(MAINPO, "PledgeBank.po") or die "";
open(LIVESIMPLYPO, ">en_GB.UTF-8/LC_MESSAGES/PledgeBankLiveSimply.po") or die "";

print LIVESIMPLYPO "# AUTOMATICALLY GENERATED by make_livesimply_po, do not edit\n";
print LIVESIMPLYPO "\n";

my $buffer = "";
my $start = 0;
while(<MAINPO>) {
    if (!$start) {
        s/#, fuzzy//;
    }
    if (m/"Last-Translator: FULL NAME/) {
        $_ = '"Last-Translator: mysociety/bin/make_livesimply_po\\n"'."\n";
    }
    if (m/"PO-Revision-Date: YEAR-MO-DA/) {
        my $time = POSIX::strftime("%Y-%m-%d %H:%M%z", localtime(time()));
        $_ = '"PO-Revision-Date: '.$time.'\\n"'."\n";
    }
    if (m/"Language-Team: LANGUAGE/) {
        $_ = '"Language-Team: Live Simply Promise\\n"'."\n";
    }
    if (m/"Plural-Forms: nplurals=/) {
        $_ = '"Plural-Forms: nplurals=2; plural=n != 1;\\n"'."\n";
    }

    if (m/^#/) {
        # comment or blank line
        print LIVESIMPLYPO $_;
    } elsif (m/^\s+$/) {
        # blank line
        $start = 1;
        $buffer = "";
        print LIVESIMPLYPO $_;
    } elsif ($start && (m/^msgstr ""/ || m/^msgstr\[0\] ""/)) {
        # start of translated text - translate English into Live Simple Promise
        # langauage
        if (m/^msgstr\[0\] ""/) {
            $buffer =~ s/^msgid "/msgstr[0] "/m;
            $buffer =~ s/^msgid_plural "/msgstr[1] "/m;
            <MAINPO>; # skip untranslated plural
        } else {
            $buffer =~ s/^msgid "/msgstr "/;
        }
        $buffer =~ s/PledgeBank.com/Live Simply Promise/g;
        $buffer =~ s/PledgeBank/Live Simply Promise/g;
        $buffer =~ s/\bpledge\b/promise/g;
        $buffer =~ s/\bPledge\b/Promise/g;
        $buffer =~ s/\bpledges\b/promises/g;
        $buffer =~ s/\bPledges\b/Promises/g;
        print LIVESIMPLYPO $buffer;
        $buffer = "";
    } else {
        # English text
        print LIVESIMPLYPO $_;
        $buffer .= $_;
    }


}


