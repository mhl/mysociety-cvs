#!/usr/bin/perl -w
use strict;

# Generates 365act version of CSS file from main PledgeBank CSS file

open(MAINCSS, "../web/pb.css") or die "";
open(NEWCSS, ">../web/microsites/autogen/365act.css") or die "";

print NEWCSS "/* AUTOMATICALLY GENERATED by make_365act_css, do not edit */\n";
print NEWCSS "\n";

my $selector = "";
while(<MAINCSS>) {
    if (m/^(.*) {/) { $selector = $1 }

    s/pb.css/365act.css/;
    s/Top-level style sheet for PledgeBank.com/Custom style sheet for 365act version of PledgeBank/;

    #s/#522994/#299429/gi;  # link colour
    #s/#7b52a5/#52a552/gi;  # visited link colour
    #s/#21004a/#000000/gi;  # purple lettering/thin-borders 

#    s/#9c7bbd/#6968ce/gi;  # darker purple background (at top of page)
#    s/#9c7bbd/#ffffff/gi;  # darker purple background (at top of page)
    #s/background-color: #9c7bbd;/background-image: url(\/365-gradlrge.gif);/i;

    # s/background-color: #ffffff;/background-image: url(\/365-gradlrge.gif);/i if ($selector eq "body");
#    s/#f6e5ff/#9999ff/gi;  # lighter pink plaque background
    #s/background-color: #f6e5ff;/background-image: url(\/365-grad.gif);/i; 
#    s/#c6b5de/#8686ec/gi;  # darker pink plaque background

    print NEWCSS $_;
}

#print NEWCSS "\nh2 { color: #000000; }\n";


