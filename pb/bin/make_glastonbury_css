#!/usr/bin/perl -w
use strict;

# Generates Glastonbury version of CSS file from main PledgeBank CSS file

open(MAINCSS, "../web/pb.2.css") or die "";
open(GLASTONBURYCSS, ">../web/microsites/autogen/glastonbury.css") or die "";

print GLASTONBURYCSS "/* AUTOMATICALLY GENERATED by make_glastonbury_css, do not edit */\n";
print GLASTONBURYCSS "\n";

my $selector = "";
while(<MAINCSS>) {
    if (m/^(.*) {/) { $selector = $1 }

    s/pb.css/glastonbury.css/;
    s/Top-level style sheet for PledgeBank.com/Custom style sheet for Glastonbury version of PledgeBank/;

    s/#522994/#299429/gi;  # link colour
    s/#7b52a5/#52a552/gi;  # visited link colour
    s/#21004a/#000000/gi;  # purple lettering/thin-borders 

    s/#9c7bbd/#7bbd7b/gi;  # darker purple background (at top of page)
    #s/#f6e5ff/#eeeeee/gi;  # lighter pink plaque background
    #s/#c6b5de/#c6bcc2/gi;  # darker pink plaque background

    print GLASTONBURYCSS $_;
}

#print GLASTONBURYCSS "\nh2 { color: #000000; }\n";


