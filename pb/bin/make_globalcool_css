#!/usr/bin/perl -w
use strict;

# Generates Global Cool version of CSS file from main PledgeBank CSS file

open(MAINCSS, "../web/pb.css") or die "";
open(COOLCSS, ">../web/microsites/autogen/global-cool.css") or die "";

print COOLCSS "/* AUTOMATICALLY GENERATED by make_globalcool_css, do not edit */\n";
print COOLCSS "\n";

my $selector = "";
while(<MAINCSS>) {
    if (m/^(.*) {/) { $selector = $1 }

    s/pb.css/global-cool.css/;
    s/Top-level style sheet for PledgeBank.com/Custom style sheet for Global Cool version of PledgeBank/;
    if ($selector eq "#pbcontent") {
        s/padding: 5px 5% 10px;/padding: 5px 0% 10px;/;
    }
    if ($selector eq "#currentpledges, #successfulpledges, #yoursignedpledges") {
        s/width: 59%;/width: 100%;/;
    }

    s/#522994/#3399cc/gi;  # link colour
    s/#7b52a5/#6699cc/gi;  # visited link colour
    s/#21004a/#21004a/gi;  # purple lettering/thin-borders 
#    s/#9c7bbd/#9c7bbd/gi;  # darker purple background (at top of page)
    s/#f6e5ff/#efefef/gi;  # lighter pink plaque background
    s/#c6b5de/#ecf7ff/gi;  # darker pink plaque background

 
    print COOLCSS $_;
}




