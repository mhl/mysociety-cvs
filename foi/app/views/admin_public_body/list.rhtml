<% @title = 'Listing public bodies' %>

<h1><%=@title%></h1>

<p><%= link_to 'New public body', :action => 'new' %></p>

<table>
  <tr>
  <% for column in PublicBody.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for public_body in @public_bodies %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%= link_to h(public_body.name), :action => 'show', :id => public_body %></td>
  <% for column in PublicBody.content_columns.map { |c| c.name } - [ "name" ] %>
    <td><%=h public_body.send(column) %></td>
  <% end %>
  </tr>
<% end %>
</table>

<%= will_paginate(@public_bodies) %>

<br />

