
<%= start_form_tag :action => "signin" %>
    <p>
    <label for="email">Enter your e-mail address:</label>
    <%= text_field_tag "email" %>
    </p>
    <p>
    <label for="password">Password:</label>
    <%= password_field_tag "password" %>
    </p>
    <%= submit_tag "Sign in" %>
<%= end_form_tag %>

