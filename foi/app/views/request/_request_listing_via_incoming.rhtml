<p class="request_listing">
    <%= link_to "Response to '" + highlight_words(info_request.title, @highlight_words) + "'", request_url(info_request)+"#incoming-"+incoming_message.id.to_s %>

    <br>
    <%= excerpt_and_highlight(incoming_message.get_text_for_indexing, @highlight_words) %>
    <br>

    <span class="request_listing_bottomline">
        <strong>
        <%= info_request.display_status %>
        </strong>

        Response from <%= public_body_link(info_request.public_body) %>
        to <%= user_link(info_request.user) %>
        on <%= simple_date(incoming_message.sent_at) %>.
    </span>
</p>

