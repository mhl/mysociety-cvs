define('OPTION_COL_DB_USER', 'col');
define('OPTION_COL_DB_PASS', '');

// Not really used for Contours of Life
define('OPTION_GOOGLE_MAPS_API_KEY', '');

// Postcode lookup
define('OPTION_MAPIT_URL', '');

// ATCO-CIF timetable data to use
