#!/bin/bash

# For deploy on mySociety servers

# Check are in mysociety directory
cd ../mysociety

if [ ! -e "../tmpwork" ]
then
    PWD=`pwd`
    if [ "$PWD" == "/data/vhost/mapumental.channel4.com/mysociety" ]
    then
        # use shared tmpwork directory
        cd ..
        ln -s /colwork/tmpwork .
        cd mysociety
    else
        # make local tmpwork directory
        mkdir ../tmpwork
    fi
fi

# Make C++ binaries
cd iso/bin
make --quiet

# Make config files for tilecache
./generate-config


