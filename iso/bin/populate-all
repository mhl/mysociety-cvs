#!/bin/bash

SORT=$1

if [ "$SORT" == "all-country" ]
then
    ./do-nptdr.py --datavalidfrom="6 Oct 2008" --datavalidto="12 Oct 2008" --data="Timetable Data/CIF/National/CIF-National/*.CIF" --dataname="all-country" --whenarrive="7 Oct 2008" livecalc
elif [ "$SORT" == "oxfordshire" ]
then
    ./do-nptdr.py --datavalidfrom="6 Oct 2008" --datavalidto="12 Oct 2008" --data="Timetable Data/CIF/Admin_Area_340/*.CIF" --dataname="oxfordshire" --whenarrive="7 Oct 2008" livecalc
elif [ "$SORT" == "west-midlands" ]
then
    ./do-nptdr.py --datavalidfrom="6 Oct 2008" --datavalidto="12 Oct 2008" --data="Timetable Data/CIF/Admin_Area_430/*.CIF" --dataname="west-midlands" --whenarrive="7 Oct 2008" livecalc
else
    echo "Please specify which dataset name to load as argument"
fi


