#!/bin/bash

set -e

SORT=$1

if [ "$SORT" == "all-country" ]
then
    FILES="National/CIF-National/*.CIF"
elif [ "$SORT" == "oxfordshire" ]
then
    FILES="Admin_Area_340/*.CIF"
elif [ "$SORT" == "west-midlands" ]
then
    FILES="Admin_Area_430/*.CIF"
else
    echo "Please specify which dataset name to load as argument"
    exit
fi

./do-nptdr.py --datavalidfrom="6 Oct 2008" --datavalidto="12 Oct 2008" --data="Timetable Data/CIF/$FILES" --dataname="$SORT" --whenarrive="7 Oct 2008" livecalc
./cull_stations.py

