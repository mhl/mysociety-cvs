#!/usr/bin/perl -w

use strict;

# Skip heading
<>;

while (<>) {
    chomp;
    my ($geonameid, $code, $name, $population, $wikipedia, $lat, $lon, $seconds, $actual_to, $depart_date, $depart_time, $arrive_date, $arrive_time, $duration_on_train, $wait_after_hour_in_secs, $rest_of_line) = split /\t/;

    if (defined($lat) && defined($lon) && defined($seconds)) {
        my $mins = $seconds / 60;
        print "$lat $lon $seconds $name, $mins mins - depart $depart_date $depart_time - arrive $arrive_date $arrive_time - pop $population\n";
    }
}

