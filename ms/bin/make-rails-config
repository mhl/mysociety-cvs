# Rails config file made by mysociety/ms/bin/make-rails-config

# mySociety NOTE: We only use the rails 'production' environment in the
# deployment of sites using mySociety's config system, even development ones.
# You can fiddle with RAILS_ENV on development sites if it floats your boat.

#   (on OS X: gem install mysql -- --include=/usr/local/lib)
# And be sure to use new-style password hashing:
#   http://dev.mysql.com/doc/refman/5.0/en/old-client.html
development:
  adapter: postgresql
  database: NONE
  username: NONE
  password: NONE

  # Connect on a TCP socket.  If omitted, the adapter will connect on the
  # domain socket given by socket instead.
  #host: localhost
  #port: 3306

# Warning: The database defined as 'test' will be erased and
# re-generated from your development database when you run 'rake'.
# Do not set this db to the same as development or production.
test:
  adapter: postgresql
  database: NONE
  username: NONE
  password: NONE

production:
  adapter: postgresql
  database: <?=OPTION_MSPG_DB_NAME?>

  username: <?=OPTION_MSPG_DB_USER?>

  password: <?=OPTION_MSPG_DB_PASS?>

