#!/bin/bash
# message-send-graph
# Plot graph of WriteToThem message creation rate.
#
# Copyright (c) 2006 UK Citizens Online Democracy. All rights reserved.
# Email: francsi@mysociety.org. WWW: http://www.mysociety.org/
# 
# $Id: message-send-graph,v 1.1 2006-02-08 11:36:40 francis Exp $

SOURCE=/tmp/fyr-signup-rate-graph-data-$RANDOM$RANDOM
GPSCRIPT=/tmp/fyr-signup-rate-graph-script-$RANDOM$RANDOM

echo "select 
    date('1970-1-1 00:00:00'::timestamp + (created||' seconds')::interval), count(*)
    from message group by
    date('1970-1-1 00:00:00'::timestamp + (created||' seconds')::interval)
    order by 
    date('1970-1-1 00:00:00'::timestamp + (created||' seconds')::interval)
    ;" | psql -A -F " " fyr fyr | egrep -v "date|rows" >$SOURCE
echo "source $SOURCE"
exit
cat $SOURCE | less
exit

cat >$GPSCRIPT <<END 
    set nokey
    unset border
    set terminal png font 'Vera.ttf' 9

    set xdata time;
    set timefmt "%Y-%m-%d";
    # set xrange ["2001-06-21":"2005-10-11"];
    set format x "%b"
    set xlabel "2005-2006"
    # unset xlabel

    set ylabel "cumulative signups"
    set y2label "signups / day, aggregated over calendar day"
    set xtics nomirror
    set ytics nomirror tc lt 2
    set y2tics nomirror tc lt 3

    set arrow 1 from '2005-11-21', 0 to '2005-11-21', 9000 lt 0 nohead
    set label 1 'official launch of service' at '2005-11-15', 9000 right rotate

    n = 0;
    plot "< awk 'BEGIN { n = 0 } { n += \$2; print \$1, \$2, n; }' $SOURCE" using 1:3 with lines lt 2, "$SOURCE" using 1:2 with lines axes x1y2 lt 3
END
echo "gpscript $GPSCRIPT"

export GDFONTPATH=/usr/share/fonts/truetype/ttf-bitstream-vera
gnuplot < $GPSCRIPT > ~/public_html/fyr-signups.png

