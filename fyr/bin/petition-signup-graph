#!/bin/bash
# petition-signup-graph
# Plot graph of rate of signup to a particular petition
#
# Copyright (c) 2006 UK Citizens Online Democracy. All rights reserved.
# Email: francis@mysociety.org. WWW: http://www.mysociety.org/
# 
# $Id: petition-signup-graph,v 1.1 2007-02-15 19:10:22 francis Exp $

GPLOT_OUTPUT="set terminal png font 'Vera.ttf' 9 size 800,400"
EXTENSION=".png"
#GPLOT_OUTPUT="set terminal fig color big thickness 1"
#EXTENSION=".fig"
#GPLOT_OUTPUT="set terminal svg size 800 250"
#EXTENSION=".svg"

cd `dirname $0`
cd ../../
source shlib/deployfns

read_conf pet/conf/general

SOURCEO=/tmp/pet-signup-rate-graph-data-nonwmc-$RANDOM$RANDOM
SOURCED=/tmp/pet-signup-rate-graph-data-dispatched-$RANDOM$RANDOM
GPSCRIPT=/tmp/pet-signup-rate-graph-script-$RANDOM$RANDOM

#echo "select 
#    date(signtime), count(*)
#    from signer 
#    where emailsent in ('confirmed') 
#    group by date(signtime)
#    order by date(signtime)
#    ;" | psql --host $OPTION_PET_DB_HOST --port $OPTION_PET_DB_PORT -A -F " " $OPTION_PET_DB_NAME $OPTION_PET_DB_USER | egrep -v "date|rows" >$SOURCEO
#echo "source $SOURCEO"

SOURCEO=/tmp/pet-signup-rate-graph-data-nonwmc-15644012

#echo "select 
#    date('1970-1-1 00:00:00'::timestamp + (dispatched||' seconds')::interval), count(*)
#    from message 
#    where dispatched is not null and state in ('sent', 'finished') 
#        and recipient_type = 'WMC'
#    group by
#    date('1970-1-1 00:00:00'::timestamp + (dispatched||' seconds')::interval)
#    order by 
#    date('1970-1-1 00:00:00'::timestamp + (dispatched||' seconds')::interval)
#    ;" | psql --host $OPTION_PET_DB_HOST --port $OPTION_PET_DB_PORT -A -F " " $OPTION_PET_DB_NAME $OPTION_PET_DB_USER | egrep -v "date|rows" >$SOURCED
#echo "source $SOURCED"

cat >$GPSCRIPT <<END 
    unset border
    unset arrow
    unset key
    set tics out
    $GPLOT_OUTPUT

    set xdata time
    set timefmt "%Y-%m-%d"
    set xrange ["2006-11-14":]
    set format x "%d %b %Y"
    set xtics nomirror
    unset xlabel

    set ytics nomirror tc lt 3
    set ylabel "confirmed signups / calendar day" tc lt 3
    set y2tics tc lt 2
    set y2label "total number of signers" tc lt 2
    set format y2 "%.0f"

#    set arrow 1 from '2005-02-14', 0 to '2005-02-14', 900 lt 0 nohead
#    set label 1 'launch of beta' at '2005-02-17', 900

    n = 0
#    plot "$SOURCEO" using 1:2 with lines axes x1y2 lt 4 title "Signups"
    plot "$SOURCEO" using 1:2 with impulses lt 3 lw 15 ,\
    "< awk 'BEGIN { n = 0 } { n += \$2; print \$1, \$2, n; }' $SOURCEO" using 1:3 axes x1y2 with lines lt 2 title "cumulative signups"
#    "$SOURCED" using 1:2 with lines axes x1y2 lt 3 title "non-MPs" 
END
#echo "gpscript $GPSCRIPT"

export GDFONTPATH=/usr/share/fonts/truetype/ttf-bitstream-vera
gnuplot < $GPSCRIPT > ~/public_html/pet-live-signups$EXTENSION

